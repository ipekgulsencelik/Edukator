@model Edukator.EntityLayer.Concrete.SocialMedia

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Update Social Media</h6>
        <form method="post">
            <input type="hidden" asp-for="SocialMediaID" />
            <div class="mb-3">
                <label for="socialmedianame" class="form-label">Social Media Name</label>
                <input type="text" class="form-control" id="socialmedianame" asp-for="SocialMediaName" />
            </div>
            <div class="mb-3">
                <label for="socialmediaicon" class="form-label">Social Media Icon</label>
                <input type="text" class="form-control" id="socialmediaicon" asp-for="SocialMediaIcon" />
            </div>
            <div class="mb-3">
                <label for="socialmediaurl" class="form-label">Social Media URL</label>
                <input type="text" class="form-control" id="socialmediaurl" asp-for="SocialMediaURL" />
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>