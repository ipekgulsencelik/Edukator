@model List<Edukator.EntityLayer.Concrete.AppRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Edukator Role Processing</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Role Name</th>
                    <th scope="col">Delete</th>
                    <th scope="col">Update</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.Name</td>
                        <td><a href="/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                        <td><a href="/Role/UpdateRole/@item.Id" class="btn btn-outline-success">Update</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Role/AddRole/" class="btn btn-outline-primary">Add New Role</a>
    </div>
</div>