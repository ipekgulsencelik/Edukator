@model Edukator.EntityLayer.Concrete.Course

@{
    ViewData["Title"] = "AddCourse";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Create New Course</h6>
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Course Title</label>
                <input type="text" class="form-control" asp-for="Title" />
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea class="form-control" rows="5" asp-for="Description"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Price</label>
                <input type="text" class="form-control" asp-for="Price" />
            </div>
            <div class="mb-3">
                <label class="form-label">Image URL</label>
                <input type="text" class="form-control" asp-for="ImageURL">
            </div>
            <div class="mb-3">
                <label class="form-label">Review</label>
                <input type="text" class="form-control" asp-for="Review" />
            </div>
            <div class="mb-3">
                <label class="form-label">Category</label>
                @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.categories, new { @class = "form-control"})
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>