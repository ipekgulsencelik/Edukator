@model List<Edukator.EntityLayer.Concrete.Course>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Courses</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Course</th>
                    <th scope="col">Delete</th>
                    <th scope="col">Update</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.Title</td>
                        <td>@item.Price</td>
                        <td>@item.Category?.CategoryName</td>
                        <td><a href="/Course/@item.CourseID" class="btn btn-outline-dark">Course</a></td>
                        <td><a href="/Course/DeleteCourse/@item.CourseID" class="btn btn-outline-danger">Delete</a></td>
                        <td><a href="/Course/UpdateCourse/@item.CourseID" class="btn btn-outline-success">Update</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Course/AddCourse/" class="btn btn-outline-primary">Create New Course</a>
    </div>
</div>